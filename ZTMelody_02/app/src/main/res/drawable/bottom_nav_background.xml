<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo negro -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
        </shape>
    </item>

    <!-- Borde blanco en los lados y parte inferior -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/COLOR_BASE_3"/>
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Fondo negro interno para sobreponer al borde blanco en la parte superior -->
    <item android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>
